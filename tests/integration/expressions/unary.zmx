// Negation on numbers.
assert(-11 == 0 - 11);
assert(--30.1 == 30.1);
assert(-----3 == -3);

// Bang on booleans and other types.
assert(!true == false);
assert(!2 == false);
assert(!!"text" == true);
assert(!!true == true);
assert(!!!!!!(1 == 1) == true);

// Tilde on positive and negative numbers..
assert(~13 == -14);
assert(~~49 == 49);
assert(~-90 == 89);
assert(~~-100 == -100);
assert(~~~~~--77 == -78);
